<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/interstitialBtn"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:background="#FFD600"
        android:text="Show Interstitial Ad"
        android:textStyle="bold" />

    <Button
        android:text="Show Banner Ad"
        android:background="#FFD600"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/interstitialBtn"
        android:id="@+id/bannerBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/hideBannerBtn"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bannerBtn"
        android:layout_height="50dp"
        android:background="#FFD600"
        android:text="Hide Banner Ad"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/bannerAdContainer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>